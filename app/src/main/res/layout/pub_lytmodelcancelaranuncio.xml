<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:background="@drawable/containedbutton_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrmodalcancelaranuncio1"
            style="@style/Subtitle_1"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pub_mcabtncancelar"
                android:layout_width="@dimen/btn_type02_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="@string/pub_varstrmodalcancelaranuncio3"
                style="@style/Text_button_red"/>
            <Button
                android:id="@+id/pub_mcabtnaceptar"
                android:layout_width="@dimen/btn_type02_width"
                android:layout_height="wrap_content"
                android:text="@string/pub_varstrmodalcancelaranuncio2"
                style="@style/Text_button_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

